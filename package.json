    "express": "^4.19.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/pg": "^8.11.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
